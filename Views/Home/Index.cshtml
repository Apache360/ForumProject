@model IEnumerable<ForumProject.Models.Topics>
@{
    ViewBag.Title = "Home Page";
    ForumProject.Models.Entities db = new ForumProject.Models.Entities();
}

<div class="jumbotron">
    <h1>FORUM</h1>
</div>

<div class="row">
    <div>
        <p>
            @Html.ActionLink("Create new topic", "Create", "Topics")
        </p>
        <table class="table">
            <tr>
                <th>
                    Topics
                </th>
                <th>
                    Creator
                </th>
                <th></th>
            </tr>

            @foreach (var item in db.Topics)
            {
                <tr>
                    <td>
                        @Html.ActionLink(item.TopicName, $"View/{item.Id}", "Topics")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Users.UserName)
                    </td>
                </tr>
            }

        </table>
    </div>
    <div class="col-md-4">
        <h2>List of users</h2>
        @Html.ActionLink("Get Users", "Index", "Users")<br />
    </div>
    <div class="col-md-4">
        <h2>List of messages</h2>
        @Html.ActionLink("Get Messages", "Index", "Messages")<br />
    </div>
    <div class="col-md-4">
        <h2>List of topics</h2>
        @Html.ActionLink("Get Topics", "Index", "Topics")
    </div>
</div>